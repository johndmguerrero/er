<div class="header-mb {% if settings.header_style_mobile == 'header_mobile_2' %}header_mobile_2{% elsif settings.header_style_mobile == 'header_mobile_3' %}header_mobile_3{% endif %}">
    <div class="header-mb-left header-mb-items{% unless settings.enable_search %} no-search{% endunless%}{% unless shop.customer_accounts_enabled %} no-account{% endunless%}">
        <div class="hamburger-icon svg-mb">
            <a href="#" class="icon-nav" title="Menu Mobile Icon" data-menu-mb-toogle>
                <span class="icon-line"></span>
            </a>
        </div>

        {% if settings.header_style_mobile == 'header_mobile_1' %}
        	{% if settings.enable_search %}
          <div class="search-mb svg-mb">
              <a href="#" title="Search Icon" class="icon-search" data-search-mobile-toggle>
                  {% render 'icon-search' %}
              </a>

              <a href="javascript:void(0)" title="close" class="close close-search">
                  {% render 'icon-close' %}
              </a>

              {% render 'search-bar' %}
          </div>
        	{% endif %}
        {% endif %}

        {% if settings.header_style_mobile == 'header_mobile_2' %}
          <div class="header-logo">
            {% if section.settings.brand_type == 'image' and section.settings.logo != bank %}
            <a class="logo-img" href="{{ routes.cart_url | split: 'cart' | first }}" title="Logo">
              <img data-src="{{ section.settings.logo | img_url: 'master' }}"
                   src="{{ section.settings.logo | img_url: 'master' }}"
                   alt="{{ section.settings.logo.alt | default: shop.name }}" itemprop="logo" class="lazyautosizes lazyloade" data-sizes="auto">
            </a>
            {% elsif section.settings.brand_text != '' %}
            <a class="logo-title" href="{{ routes.cart_url | split: 'cart' | first }}">
              {{ section.settings.brand_text }}
            </a>
            {% else %}
            <a class="logo-title" href="{{ routes.cart_url | split: 'cart' | first }}">
              {{ shop.name }}
            </a>
            {% endif %}
          </div>
        {% endif %}


    </div>

  <div class="header-mb-middle header-mb-items{% unless shop.customer_accounts_enabled %} no-account{% endunless%}{% unless settings.enable_search %} no-search{% endunless%}">
    {% if settings.header_style_mobile == 'header_mobile_1' or settings.header_style_mobile == 'header_mobile_3' %}
      <div class="header-logo">
        {% if section.settings.brand_type == 'image' and section.settings.logo != bank %}
        <a class="logo-img" href="{{ routes.cart_url | split: 'cart' | first }}" title="Logo">
          <img data-src="{{ section.settings.logo | img_url: 'master' }}"
               src="{{ section.settings.logo | img_url: 'master' }}"
               alt="{{ section.settings.logo.alt | default: shop.name }}" itemprop="logo" class="lazyautosizes lazyloade" data-sizes="auto">
        </a>
        {% elsif section.settings.brand_text != '' %}
        <a class="logo-title" href="{{ routes.cart_url | split: 'cart' | first }}">
          {{ section.settings.brand_text }}
        </a>
        {% else %}
        <a class="logo-title" href="{{ routes.cart_url | split: 'cart' | first }}">
          {{ shop.name }}
        </a>
        {% endif %}
      </div>
    {% endif %}
  </div>

  <div class="header-mb-right header-lang-style2 header-mb-items{% unless settings.enable_search %} no-search{% endunless%}{% unless shop.customer_accounts_enabled %} no-account{% endunless%}">
    {% if settings.header_style_mobile == 'header_mobile_2' or settings.header_style_mobile == 'header_mobile_3' %}
      {% if settings.enable_search %}
        <div class="search-mb svg-mb">
            <a href="#" title="Search Icon" class="icon-search" data-search-mobile-toggle>
                {% render 'icon-search' %}
            </a>

            <a href="javascript:void(0)" title="close" class="close close-search">
                {% render 'icon-close' %}
            </a>

            {% render 'search-bar' %}
        </div>
      {% endif %}
    {% endif %}

    {% unless settings.header_style_mobile == 'header_mobile_3' %}
      {% if shop.customer_accounts_enabled %}
      <div class="acc-mb svg-mb">
        <a href="#" title="User Icon" class="icon-user" data-user-mobile-toggle>
          {% if settings.header_layout == '05' %}
            {% render 'icons8-male-user' %}
          {% elsif settings.header_layout == '06' %}
            {% render 'icon-user-2' %}
          {% elsif settings.header_layout == '07' %}
            {% render 'icons7-user' %}
          {% else %}
            {% render 'icon-user' %}
          {% endif %}
        </a>
      </div>
      {% endif %}
    {% endunless %}

    <div class="cart-icon svg-mb">
      <a href="#" title="Cart Icon" data-cart-toggle>
        {% if settings.header_layout == '05' or settings.header_layout == '07' %}
          {% render 'icons8-shopping-bag' %}
        {% elsif settings.header_layout == '06' %}
          {% render 'icon-cart-2' %}
        {% else %}
          {% render 'icon-cart' %}
        {% endif %}
        <span class="cartCount" data-cart-count>
          {{ cart.item_count }}
        </span>
      </a>
    </div>
    <div class="btn-group language-mobile-selector">
      <button type="button" class="btn btn-secondary btn-language dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        {{ cart.currency.iso_code }}
      </button>
      <div class="dropdown-menu" id="currencies_mobile">
      {%- for currency in shop.enabled_currencies -%}
        <a class="dropdown-item{% if currency == cart.currency %} active {% endif %}" href="#" data-currency="{{currency.iso_code}}">
          {% assign currency_iso = currency.iso_code %}
          <span class="text">
            {{currency.iso_code}}
          </span>
        </a>
      {%- endfor -%}
      </div>
    </div>
  </div>
</div>
<style>
  .btn-language{
    min-width: 65px;
    background: transparent !important;
    border: 0;
    color: #000 !important;
    box-shadow: none !important;
    padding: 0 !important;
  }

  .language-mobile-selector .dropdown-menu{
    padding: 0;
    min-width: auto;
    border: 0;
    border-radius: 0;
    box-shadow: 10px 10px 37px -16px rgba(0,0,0,0.75);
    -webkit-box-shadow: 10px 10px 37px -16px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 10px 37px -16px rgba(0,0,0,0.75);
    text-align: center;
    min-width: 65px;
    border-radius: 5px;
  }

  .language-mobile-selector .dropdown-menu .dropdown-item{
    padding: 5px;
    background: white;
    color: #000;
  }

</style>

<script>
        // Select all your currencies buttons.
    var currencySwitcher = $('#currencies_mobile'),
        currencyItem = currencySwitcher.find('[data-currency]');

    currencyItem.on('click', function(e) {
        e.preventDefault();

        if($(this).hasClass('active')) return false;

        currencyItem.removeClass('active');

        $(this).addClass('active');

        var label = $('#currencies').prev('[data-currency-label]');

        if(label.length && label.is(':visible')) {
        var item = $(this).html();

        label.html(item);

        if($('.lang-currency-groups-8').length){
          currencySwitcher.hide();
        } else {
          currencySwitcher.slideUp(300);
        }

        };

        var cur = $(this).attr('data-currency');
        $('#currency_form option').filter(function() {
            return ($(this).text() == cur); //To select Blue
        }).prop('selected', true);
      	$('#currency_form').submit();

    });

</script>